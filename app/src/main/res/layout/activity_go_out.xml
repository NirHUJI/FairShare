<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare = "http://schemas.android.com/apk/res/share.fair.fairshare"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/go_out_activity_fragment_container">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#45da8f">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <share.fair.fairshare.RelativeButton
                fairshare:landscapeWidthFactor="15"
                fairshare:portraitWidthFactor="15"
                fairshare:landscapeHeightFactor="15"
                fairshare:portraitHeightFactor="15"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_to_group_button"
                android:background="@drawable/back_button"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <share.fair.fairshare.RelativeButton
                fairshare:landscapeTextFactor="40"
                fairshare:portraitTextFactor="40"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/calculate_button"
                android:textAllCaps="false"
                android:background="@drawable/round_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
               />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
