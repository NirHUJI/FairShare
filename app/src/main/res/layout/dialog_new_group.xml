<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare = "http://schemas.android.com/apk/res/share.fair.fairshare"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <share.fair.fairshare.views.RelativeEditText
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_name_edit_text"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="15"
        android:hint="Group's name" />


    <share.fair.fairshare.views.RelativeEditText
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/special_name_edit_text"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="15"
        android:hint="Your name in this group" />

    <share.fair.fairshare.views.RelativeTextView
        fairshare:landscapeFactor="45"
        fairshare:portraitFactor="45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Choose a special name for yourself in this particular group, or leave it blank to use your default name"
        android:id="@+id/speical_name_text_msg" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">



        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/create_button"
            android:layout_gravity="center_horizontal" />

        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_button"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>