<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <share.fair.fairshare.views.RelativeEditText
        android:id="@+id/new_group_et_group_name"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Group's name"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="15"
        android:singleLine="true"
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30" />


    <share.fair.fairshare.views.RelativeEditText
        android:id="@+id/new_group_et_special_name"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Your name in this group"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="15"
        android:singleLine="true"
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30" />

    <share.fair.fairshare.views.RelativeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a special name for yourself in this particular group, or leave it blank to use your default name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        fairshare:landscapeFactor="45"
        fairshare:portraitFactor="45" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <share.fair.fairshare.views.RelativeButton
            android:id="@+id/new_group_btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create"
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40" />

        <share.fair.fairshare.views.RelativeButton
            android:id="@+id/new_group_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40" />
    </LinearLayout>

</LinearLayout>