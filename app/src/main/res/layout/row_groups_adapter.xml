<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare = "http://schemas.android.com/apk/res/share.fair.fairshare"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/group_row_container"
    >

    <share.fair.fairshare.views.RelativeTextView
        fairshare:landscapeFactor="27"
        fairshare:portraitFactor="23"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_row_grp_name"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <share.fair.fairshare.views.RelativeImageView
        fairshare:landscapeFactor="14"
        fairshare:portraitFactor="17"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_row_arrow"
        android:background="@drawable/img_blue_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp" />

</RelativeLayout>