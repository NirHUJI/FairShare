<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_go_out_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#d0151515"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_go_out_user_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#a4084753"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_paid"
        android:inputType="numberDecimal"
        android:hint="sum paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:textColorHint="#d0151515"
        android:singleLine="false"
        android:textColor="#b33b3b3b"
        android:digits="0123456789."
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_special_share"
        android:inputType="numberDecimal"
        android:hint="user's share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:textColorHint="#d0151515"
        android:textColor="#b33b3b3b"
        android:digits="0123456789."
        android:textSize="14sp" />

</LinearLayout>