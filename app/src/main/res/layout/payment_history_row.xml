<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_item_button"
    android:padding="12dp"
    android:weightSum="1">


    <share.fair.fairshare.views.RelativeTextView
        android:id="@+id/payment_history_row_tv_time"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="time"
        android:textColor="#000000"
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30" />

    <share.fair.fairshare.views.RelativeTextView
        android:id="@+id/payment_history_row_tv_description"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentRight="@+id/date"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:text="description"
        android:textColor="#45da8f"
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30" />
</LinearLayout>