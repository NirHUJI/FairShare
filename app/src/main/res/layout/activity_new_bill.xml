<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare = "http://schemas.android.com/apk/res/share.fair.fairshare"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/go_out_activity_fragment_container">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#45da8f">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <share.fair.fairshare.views.RelativeButton
                fairshare:landscapeButtonSizeFactor="15"
                fairshare:portraitButtonSizeFactor="15"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_bill_btn_back"
                android:background="@drawable/xml_back_button"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <share.fair.fairshare.views.RelativeButton
                fairshare:landscapeTextSizeFactor="40"
                fairshare:portraitTextSizeFactor="40"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/new_bill_btn_done"
                android:textAllCaps="false"
                android:background="@drawable/round_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
               />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
