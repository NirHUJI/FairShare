<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <share.fair.fairshare.views.RelativeEditText
        android:id="@+id/save_name_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Full name"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="15"
        android:singleLine="true"
        fairshare:landscapeFactor="30"
        fairshare:portraitFactor="30" />

    <share.fair.fairshare.views.RelativeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your name will be visible only to other people within your groups. please use your real name so your friends could easily know who you are."
        android:textAppearance="?android:attr/textAppearanceSmall"
        fairshare:landscapeFactor="45"
        fairshare:portraitFactor="45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <share.fair.fairshare.views.RelativeButton
            android:id="@+id/save_name_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            android:textAllCaps="false"
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40" />

    </LinearLayout>

</LinearLayout>