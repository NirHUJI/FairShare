
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fairshare = "http://schemas.android.com/apk/res/share.fair.fairshare"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/action_edit_fragment_container">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#45da8f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeButtonSizeFactor="15"
            fairshare:portraitButtonSizeFactor="15"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_edit_btn_back"
            android:background="@drawable/xml_back_button"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAllCaps="false"
            />


        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/action_edit_btn_save"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:background="@drawable/round_button"
            android:visibility="invisible" />

        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/action_edit_btn_delete"
            android:layout_toLeftOf="@+id/action_edit_btn_save"
            android:textAllCaps="false"
            android:background="@drawable/round_button" />

        <share.fair.fairshare.views.RelativeButton
            fairshare:landscapeTextSizeFactor="40"
            fairshare:portraitTextSizeFactor="40"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/action_edit_btn_edit"
            android:layout_alignBottom="@+id/action_edit_btn_delete"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:background="@drawable/round_button" />

        <share.fair.fairshare.views.RelativeTextView
            fairshare:landscapeFactor="55"
            fairshare:portraitFactor="55"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/action_edit_tv_created_by"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/action_edit_btn_delete"
            android:layout_marginRight="15dp" />

    </RelativeLayout>


</LinearLayout>


</LinearLayout>

